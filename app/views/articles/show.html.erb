<h1><%= @article.title %></h1>
<div><%= @article.text%></div>

<% if @article.comments.any? %>
<h4>Comments</h4>  
  <% @article.comments.each do |comment|%>
    <p>Author: <%= comment.author%></p>
    <p>
      <%= comment.body%>
    </p>
    <hr>
  <%end%>
<% end %>

<h4>Add Comment</h4>
<p>
  <%= form_for [@article, @comment] do |f|%>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p> 
    <%= f.submit %>
  </p>
<% end %>
</p>